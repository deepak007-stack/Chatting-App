<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.layout.chatbook">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChatBook"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activities.ChatActivity"></activity>
        <activity android:name=".Activities.SetupProfile" />
        <activity
            android:name=".Activities.Otp_verified"
            android:windowSoftInputMode="stateVisible" />
        <activity
            android:name=".Activities.No_verified"
            android:windowSoftInputMode="stateVisible">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.MainActivity" />
    </application>

</manifest>